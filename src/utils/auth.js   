// Funci贸n para obtener el token JWT del localStorage
export const getToken = () => {
  return localStorage.getItem('token');
};

// Funci贸n para obtener el rol del usuario del localStorage
export const getUserRole = () => {
  return localStorage.getItem('role');
};

// Funci贸n para guardar token y rol (opcional, si quieres centralizarlo)
export const saveAuthData = (token, role) => {
  localStorage.setItem('token', token);
  localStorage.setItem('role', role);
};

// Funci贸n para limpiar token y rol (logout)
export const clearAuthData = () => {
  localStorage.removeItem('token');
  localStorage.removeItem('role');
};
