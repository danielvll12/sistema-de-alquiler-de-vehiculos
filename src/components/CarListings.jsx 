// src/components/CarListings.jsx
import React from 'react';
import CarCard from './CarCard';

const CarListings = ({ cars, onSelectCar, onDeleteCar }) => {
  return (
    <div className="max-w-6xl mx-auto px-4 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 py-12">
      {cars.length === 0 ? (
        <p className="text-center col-span-full text-gray-600">No hay veh√≠culos disponibles.</p>
      ) : (
        cars.map(car => (
          <CarCard 
            key={car.id} 
            car={car} 
            onSelectCar={onSelectCar} 
            onDeleteCar={onDeleteCar} 
          />
        ))
      )}
    </div>
  );
};

export default CarListings;
